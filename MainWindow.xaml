<Window x:Class="BezierCurve.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bezierCurve="clr-namespace:BezierCurve"
        Title="Bezier Curve" Height="680" Width="1300">
<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="40"/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.Resources>
        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="Margin" Value="5 5 5 0"/>
            </Style.Setters>
        </Style>
    </Grid.Resources>
    <Button Grid.Row="0" Click="btnStop_OnClick">Stop</Button>
    <Button Grid.Row="0" Click="btnDrawBezier_OnClick">Draw Bezier Curve</Button>
    <Button Grid.Row="1" Click="btnClear_OnClick">Clear</Button>
    <Border Grid.Row="2" Background="Transparent" BorderThickness="1" BorderBrush="Black" Margin="10" MouseDown="BezierDrawer_OnMouseDown">
        <bezierCurve:BezierDrawingArea x:Name="bezierDrawingArea"/>
    </Border>
</Grid>
</Window>
